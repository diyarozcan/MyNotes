@using Notlarim102.WebApp
@model IEnumerable<Notlarim102.Entity.Note>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap4.min.css" />

<h2>Note List</h2>

<p>
    @Bootstrap.LinkButton("/Note/Create/", "primary", string.Empty, "Yeni Not", "bi bi-plus-circle", "Not Ekle")
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDraft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikeCount)
            </th>
            <th>Islemler</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDraft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LikeCount)
            </td>

            <td>
                @Bootstrap.LinkButton("/Note/Edit/" + item.Id, "warning", "btn-sm", "Guncelle", "bi bi-pencil", string.Empty)
                @Bootstrap.LinkButton("/Note/Details/" + item.Id, "info", "btn-sm", "Detay", "bi bi-search", string.Empty)
                @Bootstrap.LinkButton("/Note/Delete/" + item.Id, "danger", "btn-sm", "Sil", "bi bi-trash", string.Empty)


                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>


